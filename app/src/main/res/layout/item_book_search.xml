<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Imagen a la izquierda -->
        <ImageView
            android:id="@+id/book_image"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:scaleType="centerCrop"
            android:src="@drawable/import_contacts_24px"
            android:contentDescription="Book cover" />

        <!-- Contenedor para la información del libro y botones -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="8dp">

            <!-- Nombre, autor y género -->
            <TextView
                android:id="@+id/book_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/book_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp" />

            <TextView
                android:id="@+id/book_genre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp" />

            <!-- "Añadir a:" -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Añadir a:"
                android:textSize="14sp" />

            <!-- "Añadir a:" y botones en horizontal -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_read"
                    android:layout_width="65dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="@color/ambar"
                    android:minHeight="0dp"
                    android:padding="4dp"
                    android:text="Leído"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/btn_to_read"
                    android:layout_width="65dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="@color/ambar"
                    android:minHeight="0dp"
                    android:padding="4dp"
                    android:text="Por Leer"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/btn_reading"
                    android:layout_width="65dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="@color/ambar"
                    android:minHeight="0dp"
                    android:padding="4dp"
                    android:text="Leyendo"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>